{
  "expo": {
    "name": "Tipity",
    "slug": "Tip-Calculator",
    "version": "1.0.8",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "tipity",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pandolfom.TipCalculator",
      "buildNumber": "10",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["location"],
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to detect when you are near a restaurant.",
        "NSLocationAlwaysUsageDescription": "This app needs access to your location to detect when you are near a restaurant, even when the app is in the background.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs access to your location to detect when you are near a restaurant.",
        "NSCameraUsageDescription": "This app needs access to your camera to capture images of restaurant bills."
      },
      "config": {
        "usesPushNotifications": true
      },
      "UIBackgroundModes": ["location", "fetch"]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#16161d"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "CAMERA"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "resizeMode": "contain",
          "backgroundColor": "#16161d"
        }
      ],
      [
        "expo-image-picker",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "d79858d0-0229-4946-85f5-bf810d3d7df9"
      }
    }
  }
}
